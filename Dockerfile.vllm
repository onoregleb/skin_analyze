FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y python3 python3-pip git && rm -rf /var/lib/apt/lists/*

RUN pip3 install --no-cache-dir vllm==0.6.2 torch==2.4.0 transformers==4.44.2 safetensors==0.4.4 accelerate==0.34.2

ENV VLLM_API_KEY=dev
ENV QWEN_MODEL=Qwen/Qwen3-4B-Instruct-2507

EXPOSE 8001
CMD ["python3", "-m", "vllm.entrypoints.openai.api_server", "--model", "${QWEN_MODEL}", "--port", "8001", "--api-key", "${VLLM_API_KEY}", "--trust-remote-code"]
